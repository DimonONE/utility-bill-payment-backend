{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "incremental": true,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
